form#user.mui-form
  legend 
    h2
      i.fa.fa-user-circle-o
      span &nbsp; 
      = title
      
  .mui-textfield
    input(type="text", name="username", value=user.username required autofocus)
    label username
    span#error-username.mui--text-danger.errorField
  .mui-textfield
    input(type="text", name="email", value=user.email required)
    label email
    span#error-email.mui--text-danger.errorField
  .mui-textfield
    input(type="password", name="password", value=user.password required)
    label password
    span#error-password.mui--text-danger.errorField
  input(type='hidden' name='id' value=user.id id='id')
  button(type="submit")#submit-button.mui-btn.mui-btn--raised.mui--pull-right
    i.fa.fa-floppy-o 
    strong &nbsp; Save
    