extends ../layout

block content
  include ./form
  script.
    // Start script
    //
    $(document).ready(function(){
      renderBreadcrumb([
          { text: 'Home', href: '/'},
          { text: 'Users', href: '/users'},
          { text: 'Create', href: '/users/create'}
      ])
      $( "#user" ).submit( (event) => {
        event.preventDefault()
        $.post(
          "/api/users",
          $( "#user" ).serialize()
          ).done( () => window.location.href = `/users`
          ).fail( (err)=> $.handleErrors(err) )
      })
    })