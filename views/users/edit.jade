extends ../layout

block content
  include ./form
  script.
    // define constants
    //
    const form = $('#user')
    const id = $('#id').val()
    // Start script
    //
    $(document).ready(function(){
      renderBreadcrumb([
          { text: 'Home', href: '/'},
          { text: 'Users', href: '/users'},
          { text: 'Edit', href: `/users/edit/${id}`}
      ])
      form.submit(function( event ){
        event.preventDefault()
        $.put(
          `/api/users/${id}`,
          form.serialize()
          ).done( () => window.location.href = `/users`
          ).fail( (err)=> $.handleErrors(err) )
        })
    })