extends ../layout

block content
  include ./form
  script.
    // start script
    //
    $(document).ready(function(){
      $( "#category" ).submit( (event) => {
        event.preventDefault()
        $.post(
          "/api/categories",
          $( "#category" ).serialize()
          ).done( () => window.location.href = `/categories`
          ).fail( (err)=> $.handleErrors(err) )
      })
    })